
@model (string workflow, string theme)
@{
    Func<string, string> getClass = (string feature) => !string.IsNullOrWhiteSpace(feature) && feature.Equals(Model.workflow) ? "active" : "";
}
<a class="btn btn-@Model.theme btn-block @getClass("Dashboard")" asp-page="Dashboard">Dashboard</a>
<a class="btn btn-@Model.theme btn-block @getClass("Features")" asp-page="Features">Store Features</a>
<a class="btn btn-success btn-block @getClass("View")" asp-page="View" asp-route-id="">List Users</a>
<a class="btn btn-success btn-block @getClass("Create")" asp-page="Create">Create Account</a>
<a class="btn btn-success btn-block @getClass("Delete")" asp-page="Delete">Delete Account</a>
<a class="btn btn-success btn-block @getClass("Edit")" asp-page="Edit" asp-route-id="">Edit Users</a>
<a class="btn btn-success btn-block @getClass("Passwords")" asp-page="Passwords" asp-route-id="">Passwords</a>
<a class="btn btn-success btn-block @getClass("Lockouts")" asp-page="Lockouts" asp-route-id="">Lockouts</a>
<a class="btn btn-success btn-block @getClass("Roles")" asp-page="Roles" asp-route-id="">Edit Roles</a>
<a class="btn btn-success btn-block @getClass("Claims")" asp-page="Claims" asp-route-id="">Claims</a>