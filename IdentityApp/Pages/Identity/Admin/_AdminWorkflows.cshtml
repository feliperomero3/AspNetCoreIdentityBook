@model (string workflow, string theme)
@{
    Func<string, string> getClass = (string feature) => !string.IsNullOrWhiteSpace(feature) && feature.Equals(Model.workflow) ? "active" : "";
}
<a class="btn btn-@Model.theme btn-block @getClass("Dashboard")" asp-page="Dashboard">
    Dashboard
</a>
<a class="btn btn-success btn-block @getClass("List")" asp-page="SelectUser">List Users</a>